#include<bits/stdc++.h>
using namespace std;
#define ll long  long 
 
 
int main()
{
    int n;
    cin>>n;
    long long  a=0,ans=0;
    for(int i=0;i<n;i++)
    {
        int x;
        cin>>x;
        if(a==0)
        {
            a=x;
            continue;
        }
        if(x>a) a=x;
        else ans+=a-x;
        //cout<<ans<<endl;
    }
    cout<<ans<<endl;
    
}
